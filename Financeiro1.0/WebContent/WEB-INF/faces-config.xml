<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">


	<managed-bean>
		<managed-bean-name>pessoaController</managed-bean-name>
		<managed-bean-class>br.com.financeiro.controller.PessoaController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
	<application>
	<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application>
	 
  <navigation-rule>
  <navigation-case>
   <from-outcome>index</from-outcome>
   <to-view-id>/xhtml/index.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>principal</from-outcome>
   <to-view-id>/xhtml/principal.xhtml</to-view-id>
  </navigation-case>  
 </navigation-rule>


</faces-config>
